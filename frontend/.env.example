# Пример файла переменных окружения для системы аутентификации
# Скопируйте этот файл в .env и заполните актуальными значениями

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_API_TIMEOUT=10000

# Authentication Configuration
VITE_AUTH_TOKEN_REFRESH_THRESHOLD=300000
VITE_AUTH_AUTO_REFRESH=true
VITE_AUTH_REDIRECT_AFTER_LOGIN=/
VITE_AUTH_REDIRECT_AFTER_LOGOUT=/auth/login

# Application Configuration
VITE_APP_NAME=Vue.js Application
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Development Configuration
VITE_ENABLE_API_MOCKING=false
VITE_ENABLE_DEVTOOLS=true
VITE_LOG_LEVEL=info

# Security Configuration
VITE_ENABLE_HTTPS=false
VITE_CORS_ENABLED=true

# Feature Flags
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_PASSWORD_RESET=true
VITE_ENABLE_SOCIAL_LOGIN=false
VITE_ENABLE_TWO_FACTOR_AUTH=false

# Analytics and Monitoring
VITE_ENABLE_ANALYTICS=false
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Pagination Configuration
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

# Cache Configuration
VITE_CACHE_TTL=3600000
VITE_ENABLE_SERVICE_WORKER=false

# Internationalization
VITE_DEFAULT_LANGUAGE=ru
VITE_SUPPORTED_LANGUAGES=ru,en

# Third-party Services
VITE_GOOGLE_CLIENT_ID=
VITE_FACEBOOK_APP_ID=
VITE_GITHUB_CLIENT_ID=

# Development Tools
VITE_ENABLE_HOT_RELOAD=true
VITE_ENABLE_ERROR_BOUNDARY=true
VITE_ENABLE_PERFORMANCE_MONITORING=false