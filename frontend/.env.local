# Локальная разработка
ENV=development

# Сервер
SERVER_IP=127.0.0.1
DOMAIN=https://parser.mysite.ru

# База данных (локально)
DB_NAME=vk_parser
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis (локально)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Auth & Security (dev-ключи!)
SECRET_KEY=dev-secret-key
JWT_SECRET_KEY=dev-jwt-secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS & API
CORS_ORIGINS=["https://parser.mysite.ru"]
API_V1_STR=/api/v1
PROJECT_NAME=VK Comments Parser

# Frontend (локально)
NEXT_PUBLIC_API_URL=https://parser.mysite.ru
NEXT_PUBLIC_APP_URL=https://parser.mysite.ru
FRONTEND_URL=https://parser.mysite.ru

# VK API (dev-тестовые токены)
VK_API_VERSION=5.131
VK_APP_ID=your-vk-app-id
VK_REQUESTS_PER_SECOND=3
VK_MAX_COMMENTS_PER_REQUEST=100

# Parser
PARSER_BATCH_SIZE=50
PARSER_MAX_POSTS_PER_GROUP=1000
PARSER_SCHEDULE_INTERVAL=3600

# Logging
LOG_LEVEL=DEBUG

# Docker Images (dev)
DOCKER_IMAGE_BACKEND=fullstack-backend:dev
DOCKER_IMAGE_FRONTEND=fullstack-frontend:dev