# Development Dockerfile for Next.js 15 Frontend Application
FROM oven/bun:1.2.22-alpine

RUN apk add --no-cache dumb-init

WORKDIR /app

COPY package.json bun.lock ./

RUN bun install

EXPOSE 3000

ENV PORT=3000 \
    HOSTNAME=0.0.0.0 \
    NODE_ENV=development \
    NEXT_TELEMETRY_DISABLED=1

CMD ["bun", "run", "dev"] 