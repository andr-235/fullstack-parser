# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/vk_parser

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_URL=redis://redis:6379/0
REDIS_CELERY_URL=redis://redis:6379/1

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production-please-use-strong-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
ENVIRONMENT=production

# Cache Configuration
CACHE_DEFAULT_TTL=3600
CORRELATION_ID_HEADER=X-Correlation-ID

# Celery Worker Configuration
CELERY_QUEUES=vk_parser
CELERY_CONCURRENCY=4
CELERY_MAX_TASKS_PER_CHILD=100

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Celery additional settings
CELERY_RESULT_EXPIRES=3600
CELERY_TASK_TIMEOUT=300
